[maxscale]
threads=auto					//定义线程数可以用数字auto(自动)





[server1]					//定义数据库服务器
type=server					
address=192.168.4.51		//master主机IP地址
port=3306
protocol=MySQLBackend


[server2]					//定义数据库服务器
type=server	
address=192.168.4.52		//slave主机IP地址
port=3306
protocol=MySQLBackend



[MySQL Monitor]				//定义监视的数据库节点
type=monitor	
module=mysqlmon
servers=server1,server2		//主 从数据库的主机名
user=plja					//监视用户
passwd=123qqq...A			//密码
monitor_interval=10000

 


[Read-Write Service]		//定义读写分离的数据库节点
type=service
router=readwritesplit
servers=server1,server2		//主 从数据库的主机名
user=pljb					//路由用户
passwd=123qqq...A			//密码
max_slave_connections=100%




[MaxAdmin Service]			//定义管理服务器
type=service
router=cli




[Read-Write Listener]		//定义读写分离服务端口好
type=listener
service=Read-Write Service
protocol=MySQLClient
port=4006					



[MaxAdmin Listener]			//定义管理服务使用端口
type=listener
service=MaxAdmin Service
protocol=maxscaled
socket=default
port=4016

